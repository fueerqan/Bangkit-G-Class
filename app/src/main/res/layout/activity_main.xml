<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_shared_pref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_shared_preferences_label" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_sqlite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_sqlite_label" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_to_di_dagger"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/go_to_di_with_dagger" />

</LinearLayout>